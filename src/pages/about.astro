---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      Elevate your nonprofits mission with our <br />
      <span class="text-accent dark:text-white highlight"> IT Services</span>
    </Fragment>

    <Fragment slot="subtitle">
      IT for Change is is commited to changing the way the nonprofits think about IT services. We specalise in helping nonprofits implement Microsft 365. 

    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Statistics about us"
    stats={[
      { title: 'Offices', amount: '1' },
      { title: 'Employees', amount: '2' },
      { title: 'Nonprofits helped', amount: '3' },
      { title: 'Awards', amount: '1' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Services"
    subtitle="We specalize in helping nonprofits take advantage of Microsofts Tech for Social Impact program." 
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Education',
        description:
          'We offer training for Office products and more.',
